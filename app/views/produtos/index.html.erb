<html>
	<body>
		<table>
			<thead>
				<tr>
					<th>Nome</th>
					<th>Descição</th>
					<th>Preço</th>
					<th>quantidade</th>
				</tr>
			</thead>
			<tbody>
				<% todos = Produto.all %>
				<% todos.each do |produto| %>
				<tr>
					<td><%= produto.nome %></td>
					<td><%= produto.descricao %></td>
					<td><%= produto.quantidade %></td>
					<td><%= produto.preco %></td>
				</tr>
				<% end %>
			</tbody>			
		</table>
	</body>
</html>